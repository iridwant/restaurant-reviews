<%- include('../partials/navbar', { data: 'Edit Review' }) %>
<h1 class="mx-5 my-5 text-center">Edit Review</h1>
<div class="border border-primary w-25 mx-auto my-3 px-5 py-5">
    <form action="/reviews/edit/<%= data.id %> " method="POST">
        <div class="form-group">
            <label for="restaurant">Restaurant</label>
            <select name="restaurant" id="restaurant" class="form-control" disabled>
                <% for(let i = 0; i < data.Restaurants.length; i++) { %>
                <option value="<%= data.Restaurants[i].id %>" selected disabled><%= data.Restaurants[i].name %></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="review">Review</label>
            <textarea class="form-control" name="review" id="review" cols="30" rows="10"><%= data.review %></textarea>
        </div>
        <div class="form-group">
            <label for="rating">Rating</label>
            <select class="form-control col-md-6" name="rating" id="rating">
                <option value="" disabled selected>Choose Rating</option>
                <option value="5" <%= data.rating == 5 ? 'selected' : '' %>>5</option>
                <option value="4" <%= data.rating == 4 ? 'selected' : '' %>>4</option>
                <option value="3" <%= data.rating == 3 ? 'selected' : '' %>>3</option>
                <option value="2" <%= data.rating == 2 ? 'selected' : '' %>>2</option>
                <option value="1" <%= data.rating == 1 ? 'selected' : '' %>>1</option>
            </select>
        </div>
        <div class="form-group">
            <input class="btn btn-success btn-block" type="submit" value="Update Review">
            <input class="btn btn-danger btn-block" type="button" value="Cancel" onclick="location.href='/reviews'">
        </div>
    </form>
</div>
<%- include('../partials/footer') %>