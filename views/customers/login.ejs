<%- include('../partials/navbar', { data: 'Login'} ) %>
<div class="mx-auto w-50 my-3 px-3 py-3">
    <h1 class="text-center">Login</h1>

    <div class="mx-auto col-lg-9 border border-primary px-3 py-3">
        <form action="" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password">
            </div>
            <div>
                <input class="btn btn-success btn-block" type="submit" value="Login">
                <input class="btn btn-danger btn-block" type="button" value="Cancel">
                <input class="btn btn-info btn-block" type="button" value="Register">
            </div>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>